<script>
// Dealer and car data injected from backend
var dealerCarData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.DealerCarData));

function populateDealerSelect(selectId) {
        var select = document.getElementById(selectId);
        select.innerHTML = '<option value="">Select Dealer</option>';
        var added = new Set();
        dealerCarData.forEach(function(entry) {
                entry.dealers.forEach(function(dealer) {
                        if (!added.has(dealer.dealerID)) {
                                var opt = document.createElement('option');
                                opt.value = dealer.dealerID;
                                opt.text = dealer.dealerName;
                                select.appendChild(opt);
                                added.add(dealer.dealerID);
                        }
                });
        });
}

function populateCarSelect(selectId, dealerId) {
        var select = document.getElementById(selectId);
        select.innerHTML = '<option value="">Select Car Unit</option>';
        if (!dealerId) return;
        var entry = dealerCarData.find(function(e) {
                return e.dealers.some(function(d) { return d.dealerID == dealerId; });
        });
        if (entry && entry.cars) {
                entry.cars.forEach(function(car) {
                        var opt = document.createElement('option');
                        opt.value = car.dealerCarUnitId;
                        opt.text = car.carName;
                        select.appendChild(opt);
                });
        }
}

// For Consultation Modal
populateDealerSelect('consultDealerSelect');
document.getElementById('consultDealerSelect').addEventListener('change', function() {
        populateCarSelect('consultCarSelect', this.value);
});
// For Test Drive Modal
populateDealerSelect('testDriveDealerSelect');
document.getElementById('testDriveDealerSelect').addEventListener('change', function() {
        populateCarSelect('testDriveCarSelect', this.value);
});

// Optionally, pre-populate car selects if editing
