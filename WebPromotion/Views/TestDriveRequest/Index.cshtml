@model IEnumerable<WebPromotion.Services.DTO.TestDriveRequestClientDTO>
@{
    ViewData["Title"] = "TestDriveRequest";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Test Drive Request</h3>
            <ul class="breadcrumbs mb-2">
                <li class="nav-home">
                    <a href="@Url.Action("Index", "SalesPerson")">
                    <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">List Request</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Test Drive Request</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                    <div class="table-responsive">
                        <table
                        id="basic-datatables"
                        class="display table"
                        >
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Car Name</th>
                                    <th>TestDrive Date</th>
                                    <th>Note</th>
                                    <th>Status</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                                <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr key="@item.TestDriveId">
                                            <td>@item.CustomerName</td>
                                            <td>@item.CarName</td>
                                            <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                            <td>@item.Note</td>
                                            <td>
                                                @if (item.Status == "Pending")
                                                {
                                                    <span class="border border-warning text-warning rounded-pill fw-bold py-2 px-2">@item.Status</span>
                                                }
                                                else if (item.Status == "Completed")
                                                {
                                                    <span class="border border-success text-success rounded-pill fw-bold py-2 px-2">@item.Status</span>
                                                }
                                                else if (item.Status == "Canceled")
                                                {
                                                    <span class="border border-danger text-danger rounded-pill fw-bold py-2 px-2">@item.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="border border-secondary text-secondary rounded-pill fw-bold  py-2 px-2">@item.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if(item.Status == "Scheduled")
                                                {
                                                    <form action="/SalesPerson/TestDriveRequest/delete-after-handled" method="post" class="delete-request-form">
                                                        <input type="hidden" name="id" value="@item.TestDriveId" />
                                                        <input type="hidden" name="Reason" class="reason-input" value="" />
                                                        <button 
                                                            type="submit" 
                                                            class="btn btn-danger btn-sm btn-round btn-handle-request"
                                                        >
                                                            Delete Request
                                                        </button>
                                                    </form>
                                                }
                                                else if (item.Status == "Completed")
                                                {
                                                    <a 
                                                        type="button" 
                                                        href="@Url.Action("Edit", "TestDriveRequest", new { id = item.TestDriveId })" 
                                                        class="btn btn-primary btn-sm btn-round"
                                                    >
                                                        Details Activity
                                                    </a>
                                                }  else if (item.Status == "Canceled")
                                                {
                                                    <a 
                                                        type="button" 
                                                        href="@Url.Action("Detail", "TestDriveRequest", new { id = item.TestDriveId })" 
                                                        class="btn btn-primary btn-sm btn-round"
                                                    >
                                                        Details Activity
                                                    </a>
                                                } else
                                                {
                                                    <span class="text-muted">No Action Available</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No consultation requests found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Konfirmasi (bisa juga pakai ViewComponent jika ingin dinamis) -->
<div class="modal fade" id="modalConfirmation" tabindex="-1" aria-labelledby="modalConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalConfirmationLabel">Konfirmasi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <textarea class="form-control" id="Reason" rows="3" placeholder="Alasan penghapusan..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" id="btn-confirm-yes">Ya</button>
            </div>
        </div>
    </div>
</div>


