@{
    var path = Context.Request.Path.ToString().ToLower();
    if (path.StartsWith("/login") || path.StartsWith("/register"))
    {
        Layout = "_LayoutLogin";
    }
    else
    {
        var userRole = ViewBag.UserRole as string;
        if (userRole == "salesPerson")
        {
            Layout = "_LayoutSalesPerson";
        }
        else
        {
            Layout = "_Layout";
        }
    }
}